<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 구성1. 순위 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_rank"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>
    <!-- 구성2. 이름 -->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="샘플"
        app:layout_constraintLeft_toRightOf="@id/item_rank"
        app:layout_constraintRight_toLeftOf="@id/item_growth"/>
    <!-- 구성3. 점수 3가지 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_growth"
        android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
        app:layout_constraintRight_toLeftOf="@id/item_stability"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_stability"
        android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
        app:layout_constraintRight_toLeftOf="@id/item_interest"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_interest"
        android:src="@drawable/ic_sentiment_satisfied_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>